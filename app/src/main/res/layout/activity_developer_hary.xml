<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    tools:context=".DeveloperHaryActivity">

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:paddingTop="36dp"
        android:paddingBottom="36dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="200dp"
            android:transitionName="cardDeveloperPict5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_hary" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/graphiksemibold"
            android:textColor="@color/themeText1"
            android:textSize="25sp"
            android:text="Hary Suryanto"
            android:transitionName="tvDeveloperName5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/graphiksemibold"
            android:text="3411171145" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:fontFamily="@font/graphikregular"
            android:lineHeight="30sp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Lahir di Cimahi, pada 11 Oktober 1999. Hobinya nonton video di YouTube tentang teknologi. Bercita-cita memiliki usaha kuliner yang besar." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/graphiksemibold"
            android:textStyle="italic"
            android:textSize="16dp"
            android:text="Coba aja dulu, biar ga penasaran." />

    </LinearLayout>

</ScrollView>
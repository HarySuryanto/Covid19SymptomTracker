<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff6de"
    tools:context=".DeveloperBayuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:transitionName="cardDeveloperPict3"
        android:src="@drawable/foto_bayu"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama : Eka Bayu Maulana"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:transitionName="tvDeveloperName3"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM : 3411171129"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat Tanggal Lahir : Tulungagung, 26 Agustus 1999"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cita-cita : Investor dan Pengusaha"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motto : Jadilah diri sendiri, kalo kamu jadi aku? aku jadi apa?"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>
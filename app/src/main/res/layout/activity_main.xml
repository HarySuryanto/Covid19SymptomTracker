<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    tools:context=".MainActivity">

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingBottom="36dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="@font/graphiksemibold"
            android:textColor="@color/themeText1"
            android:text="Hai!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:lineHeight="35sp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/graphikregular"
            android:textColor="@color/themeText1"
            android:text="Semoga kamu sehat yaa...\nTetaplah di rumah!" />

        <!-- Informasi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/graphiksemibold"
                android:text="Infomasi"
                android:textColor="@color/themeText1"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Informasi 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVirusSpread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/themeAccent1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:padding="26dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphiksemibold"
                        android:text="Cara COVID-19 Menyebar"
                        android:textSize="20sp"
                        android:textColor="#ffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="COVID-19 dapat menyebar terutama dari ..."
                        android:textColor="#ffff" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Pelajari"
                            android:background="@color/themeAccent2"
                            android:textColor="#ffffff" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/ivVirusSpread"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:transitionName="ivVirusSpread"
                        android:src="@drawable/ic_coronavirus_spread" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Informasi 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVirusPrevention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/themeAccent1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:padding="26dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/graphiksemibold"
                        android:text="Panduan Menjaga Kesehatan"
                        android:textSize="20sp"
                        android:textColor="#ffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Infeksi virus corona memang menelan ..."
                        android:textColor="#ffff" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Pelajari"
                            android:background="@color/themeAccent2"
                            android:textColor="#ffffff" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/ivVirusPrevention"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:transitionName="ivVirusPrevention"
                        android:src="@drawable/ic_coronavirus_protection" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gejala -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/graphiksemibold"
                android:text="Gejala"
                android:textColor="@color/themeText1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvSymptomInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:fontFamily="@font/graphikregular"
                android:textColor="@color/themeText2"
                android:text="Selengkapnya ➡" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Gejala 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/ivSymptomFiver"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center"
                        android:transitionName="ivSymptomFiver"
                        android:src="@drawable/ic_fever" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Demam\n(>38℃)" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Gejala 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/ivSymptomCough"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center"
                        android:transitionName="ivSymptomCough"
                        android:src="@drawable/ic_cough" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Batuk\nKering" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Gejala 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/ivSymptomBreathe"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center"
                        android:transitionName="ivSymptomBreathe"
                        android:src="@drawable/ic_sore_throat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Sesak\nNapas" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- About the developers -->
        <TextView
            android:id="@+id/tvDeveloperTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:lineHeight="36sp"
            android:transitionName="tvDeveloperTitle"
            android:textSize="24sp"
            android:fontFamily="@font/graphiksemibold"
            android:textColor="@color/themeText1"
            android:text="Ada Orang-orang Hebat di Balik Aplikasi Hebat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- First line -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeveloperPict1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp"
                    android:transitionName="cardDeveloperPict1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_agri" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeveloperPict2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp"
                    android:transitionName="cardDeveloperPict2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_azy" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeveloperPict3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_bayu" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second line -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeveloperPict4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp"
                    android:transitionName="cardDeveloperPict4">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_fandi" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeveloperPict5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp"
                    android:transitionName="cardDeveloperPict5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_hary" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLinkToDeveloperList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:fontFamily="@font/graphiksemibold"
                android:text="CARI TAHU" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>